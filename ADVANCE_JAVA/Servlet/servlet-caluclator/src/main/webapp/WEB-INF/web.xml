<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>


	<servlet>
		<servlet-name>add</servlet-name>
		<servlet-class>com.jsp.servlet.AddServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>sub</servlet-name>
		<servlet-class>com.jsp.servlet.SubServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>mul</servlet-name>
		<servlet-class>com.jsp.servlet.MulServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>div</servlet-name>
		<servlet-class>com.jsp.servlet.DivServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>mod</servlet-name>
		<servlet-class>com.jsp.servlet.ModServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>add</servlet-name>
		<url-pattern>/add-numbers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>sub</servlet-name>
		<url-pattern>/sub-numbers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>mul</servlet-name>
		<url-pattern>/mul-numbers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>div</servlet-name>
		<url-pattern>/div-numbers</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>mod</servlet-name>
		<url-pattern>/mod-numbers</url-pattern>
	</servlet-mapping>
	
	
	

</web-app>
